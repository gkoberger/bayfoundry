.page2
  background-color rgba(0,0,0,0.03)
  .partner
    margin 0 20px
    background-color #fff
    padding 30px
    .avatar
      width 80px
      height 80px
      border-radius 100px
      background-color #eee
      margin auto
      background-size cover
      background-position center center
    &.patrick .avatar
      background-image url(../img/patrick.png);
    &.greg .avatar
      background-image url(../img/greg.png);
    &.chris .avatar
      background-image url(../img/chris.png);
    h2
      color #8ba9a9
      text-align center
      font-weight 700
      font-size 20px
      margin-bottom 0
    h3
      font-weight 300
      color #999
      text-align center
      margin-top 7px
      font-size 15px
    .fa
      padding 5px
      color #ccc
      font-size 16px
      &:hover
        color #8ba9a9
        text-decoration none
    .center
      text-align center

.page3
  .container
    padding-top 120px
    h3
      color rgba(#fff, 0.5)
      font-weight 300
      font-size 25px
    .mission
      text-align center
      color #fff
      text-align center
      max-width 600px
      text-align center
      margin auto
      p
        line-height 1.8em
        font-size 14px
        margin-top 20px
    .signatures
      width 541px
      height 45px
      background-image url(../img/signatures.png)
      background-size cover
      margin-top 40px
  .logos
    text-align center
    > div
      opacity 0.5
      background-size contain
      display inline-block
      margin 0 35px
      vertical-align middle
      background-repeat no-repeat
      &:hover
        opacity 1
    .logo-baypoint
      width (296px / 1.5)
      height (61px / 1.5)
      background-image url(../img/logo-baypoint.png)
    .logo-greylock
      width (319px / 1.5)
      height (41px / 1.5)
      background-image url(../img/logo-greylock.png)
    .logo-warriors
      width (83px / 1.5)
      height (101px / 1.5)
      background-image url(../img/logo-warriors.png)
    .logo-misfit
      width (238px / 1.5)
      height (90px / 1.5)
      background-image url(../img/logo-misfit.png)
  #hire
    display block
    margin 70px auto
    width 200px
    background-color rgba(255,255,255,0.6)
    padding 10px
    text-align center
    font-weight bold
    font-size 17px
    border-radius 5px
    color #c2a152
    &:hover
      background-color #fff
      text-decoration none
