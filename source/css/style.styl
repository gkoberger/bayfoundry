@import nib

greyish = #eee

body
  background-color #8ba9a9
  font-family 'Open Sans', sans-serif

.page1
  position relative
  .header
    height 120px
    margin-top -60px
    top 40%
    width 100%
    text-align center
    position absolute
  h1
    margin-bottom 50px
    font-family 'EB Garamond', serif
    font-variant small-caps
    color #fff
    font-size 60px

.logo
  z-index 1000
  left 50%
  margin-left -94px
  width 189px
  height 32px
  position relative
  opacity 0.5
  display block
  &:hover
    opacity 1

.l-bottom
  width 0
  height 2px
  background-color #fff
  position absolute
  bottom 0
  left 0
  transition 1.5s linear
  .on &
    width 189px
.l-middle
  width 0
  height 2px
  background-color #fff
  bottom 10px
  position absolute
  transition 1.5s linear 0.4s
  .on &
    width 189px
.l-pole
  width 4px
  height 0
  position absolute
  bottom 0
  transition 0.9s linear 0.3s
  background-position bottom left
  background-image url(../img/bridge-pole.png)
  background-size cover
  .on &
    height 32px
  &.l-pole-1
    left 35px
  &.l-pole-2
    right 35px
    transition 0.9s linear 1.3s
.l-rope
  position relative
  top 3px
  width 0
  transition 1.5s linear 0.8s
  .on &
    width 189px
  height 18px
  background-image url(../img/bridge-rope.png)
  background-size cover
  background-position top left

